  title Minstry of Health
form(action='/coronavirus' method='post' name='coronavirus' onsubmit='return formValidation()')
  .container
    .row
      .col-lg-4
        img(src='/Images/uganda-flag-part.png'  alt='' width='100%' height='50%')
      .col-lg-4
        img(src='/Images/uganda-coat_of_arms.png' alt='' width='50%' height='100%')
      .col-lg-4
        img(src='/Images/uganda-flag-part.png' alt='' width='100%' height='50%')
  div
    h6(style='text-align: center;')
      | Ministry of Health
  div
    h3(style='text-align: center;')
      | COVID19(CORONA VIRUS)
  div
    h6(style='text-align: center;')
      | Virus-Test Registration Form
  .form-row
    .form-group.col-md-6
      label(for='Surname') Surname
      input.form-control(type='Surname' name='surname')
      #sname.error
      .form-group.col-md-6
        label(for='Givenname') Given name
        input.form-control(type='Givenname' name='givenname')
        #Gname.error
      .form-group.col-md-6
        label(for='dob') Date of Birth
        input.form-control(type='datetime-local' name='DOB')
        #dob.error
      .form-row
        .form-group.col-md-5
          label(for='residence') Residence
          input.form-control(type='text' name='residence')
          #Residence.error
        .form-row
          .form-group.col-md-5
            label(for='occupation') Ocupation
            input.form-control(type='text' name='occupation')
            #Occupation.error
        .form-row
          .form-group.col-md-5
            label(for='nationality') Nationality
            input.form-control(type='text' name='nationality')
            #Nationality.error
          .form-row
            .form-group.col-md-6
              label(for='name') Gender
              input(type='radio' name='Male')
              | Male
              input(type='radio' style='margin-left: 150px;' name='female')
              | Female
            .form-row
              .form-group.col-md-12
                label(for='name') Categories
                select.form-control(name='categories' id='')
                  #error1(style='display: none; color:red;') Select Patient category
                  option(value='' default='') --Select Category--
                  option(value='' default="")
              button.btn.btn-primary(type='submit') Register
